<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/person_portrait_image"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        app:strokeColor="@color/material_grey_600"
        app:strokeWidth="1dp"
        app:cornerSize="12dp"
        tools:src="@android:color/darker_gray"
        android:contentDescription="@string/person_portrait" />

    <TextView
        android:id="@+id/person_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text_light"
        android:background="@color/text_background_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        tools:text="Morgan Freeman" />


</LinearLayout>
